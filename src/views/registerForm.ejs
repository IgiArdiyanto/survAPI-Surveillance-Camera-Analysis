<h2>Register</h2>

<form method="post" action="/register">
    <div class="form-group">
        <label for="username">Username:</label>
        <input id="username" minlength="6" maxlength="45" class="form-control" type="text" name="username">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input id="password" minlength="8" maxlength="200" class="form-control" type="password" name="password">
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>