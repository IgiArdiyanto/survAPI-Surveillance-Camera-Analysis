<h2>Login</h2>

<form method="post" action="/login">
    <div class="form-group">
        <label for="username">Username:</label>
        <input id="username" class="form-control" minlength="5" maxlength="45" type="text" name="username">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input id="password" minlength="8" maxlength="200" class="form-control" type="password" name="password">
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>